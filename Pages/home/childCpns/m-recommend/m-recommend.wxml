<view class="recommend">
  <block wx:for="{{recommends}}" wx:key="index">
    <view class="recommend-item">
      <image class="recommend-image" src="{{item.image}}" bind:load="handleImageLoad" />
      <view>{{item.title}}</view>
    </view>
  </block>
</view>

