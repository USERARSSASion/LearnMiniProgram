/* components/m-tab-control/m-tab-control.wxss */
.tab-control {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
}

.tab-item {
  flex: 1;
  text-align: center;
}

.active {
  color: #ff5777;
}

.tab-item.active .item-text {
  padding: 16rpx 10rpx;
  border-bottom: 5rpx solid #ff5777;
}
